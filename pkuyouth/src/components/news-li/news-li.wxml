<!--components/news-li/news-li.wxml-->

<block wx:if="{{auto_change_card}}">
    <block wx:if="{{networkType == 'wifi'}}">
        <news-li-bg news-info="{{newsInfo}}"></news-li-bg>
    </block>
    <block wx:else>
        <news-li-sm news-info="{{newsInfo}}"></news-li-sm>
    </block>
</block>
<block wx:else>
    <block wx:if="{{use_small_card}}">
        <news-li-sm news-info="{{newsInfo}}"></news-li-sm>
    </block>
    <block wx:else>
        <news-li-bg news-info="{{newsInfo}}"></news-li-bg>
    </block>
</block>


