/* pages/feedback/feedback.wxss */
.page-feedback {
	padding: 0rpx 40rpx;
	color: #353535;
}
.page-feedback text.header {
	display: block;
	font-size: 36rpx;
	font-weight: bold;
	margin: 0rpx 0rpx 30rpx 20rpx;
}
.page-feedback text.desc {
	display: block;
	margin: 0rpx 20rpx;
	font-size: 28rpx;
	line-height: 1.6em;
}
.page-feedback button {
	display: block;
	margin: 50rpx 0rpx 0rpx 460rpx;
	width: 180rpx;
	height: 60rpx;
	border-radius: 12rpx;
	border: 1rpx solid #993a3a;
	color: #993a3a;
	font-weight: bold;
	font-size: 28rpx;
	text-align: center;
	line-height: 60rpx;
	background-color: white;
}
.page-feedback > view {
	display: block;
	margin-top: 60rpx;
}
.page-feedback .custom textarea {
	display: block;
	width: 600rpx;
	height: 200rpx;
	padding: 30rpx;
	border-radius: 15rpx;
	font-size: 28rpx;
}
.page-feedback .custom textarea.onblur {
	border: 2rpx solid #dddddd;
	box-shadow: none;
	transition-duration: 0.15s;
}
.page-feedback .custom textarea.onfocus {
	border: 1rpx solid #993a3a;
	box-shadow: 0rpx 0rpx 6rpx #993a3a;
	transition-duration: 0.15s;
}