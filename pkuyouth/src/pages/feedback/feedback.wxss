/* pages/feedback/feedback.wxss */
.page-feedback {
	background: white;
	padding: 48rpx;
}
.page-feedback .title {
	display: inline-block;
	font-size: 32rpx;
	color: #353535;
	margin-top: 24rpx;
	margin-bottom: 24rpx;
}
.page-feedback textarea {
	display: inline-block;
	width: 600rpx;
	height: 710rpx;
	padding: 24rpx;
	margin-bottom: 24rpx;
	background: #eeeeee;
	border-radius: 7rpx;
	color: #353535;
	font-size: 28rpx;
}
.page-feedback button {
	display: inline-block;
	vertical-align: middle;
	margin-left: 100rpx;
	height: 48rpx;
	line-height: 48rpx;
	width: 248rpx;
	border-radius: 7rpx;
	border: 1rpx solid #993a3a;
	color: #993a3a;
	font-size: 27rpx;
	text-align: center;
}
.page-feedback .status {
	display: inline-block;
	vertical-align: middle;
	width: 300rpx;
	font-size: 32rpx;
	color: #353535;
}